<div class="container login-form" >
    {{#each errors}}
        <div class='alert error-message margin-10-top'>{{this}}</div>
    {{/each}}
    {{#if userInfo}}
        <div class="alert success-message">You are logged in as {{userInfo.name}}. <a href="/user/profile">view your profile</a> or login another account below!</div>
    {{/if}}
    <h2 class="title">Log in with your account</h2>   

    <form method="POST" action ="/user/login"> 
    <div class="signup-container">   
        <div class="form-group"> 
        {{#each loginForm}}
            <div class="form-group-field">
                <label for="{{this.label}}">{{this.labelText}}</label>
                <input type="{{this.type}}" id="{{this.label}}" name="{{this.label}}">           
                {{#if this.errorMessage}}
                    <div class='validation error-message margin-10-top'>{{errorMessage}}</div> 
                {{/if}}
            </div>
        {{/each}}  
        <input type="submit" value="Log in">
        </div>    
    </div>     
    </form>              
</div>